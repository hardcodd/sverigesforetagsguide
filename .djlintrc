	"indent": "2",
	"max_blank_lines": 0,
	"max_line_length": "999999",
	"max_attribute_length": "999999",
	"format_attribute_template_tags": true,
	"blank_line_after_tag": "load,extends",
	"blank_line_before_tag": "load,extends",
	"preserve_blank_lines": true,
	"line_break_after_multiline_tag": false,
	"use_gitignore": true,
	"format_css": true,
	"css": {
		"indent_size": 2
	},
	"format_js": false,
	"js": {
		"indent_size": 2
	}
}
